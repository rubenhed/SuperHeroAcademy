<div class="container my-3">
  <div class="row">
    <% @bookings.each do |booking| %>
      <% course = booking.course %>
      <div class="col-4 mb-3">
        <div class="card">
          <%= cl_image_tag booking.course.photo.key, class: "card-img-top", height: 150, width: 150, crop: :fill%>
          <div class="card-body">
            <h5 class="card-title"><%= booking.course.title %></h5>
            <p class="card-text"><%= booking.course.description %></p>
            <div class="d-flex">
              <a href=<%= course_path(course) %> class="btn btn-primary me-auto">View Course</a>
              <%= link_to "Delete", booking_path(booking), class: "btn btn-warning", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
