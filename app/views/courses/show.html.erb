
<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="course-cover-page">
  <div class="course-cover">
    <div class="course-main-info">
      <div class="course-show-title">
        <h1><%=@course.title%></h1>
      </div>
      <div class="course-show-cover-page-instructor-wrapping">
        <div class="text-overlay">
          <%= @course.description%>
        </div>
        <%= image_tag "drawing4.png", class: "course-show-cover-page-instructor"%>
      </div>
    </div>
    <div class="course-price-tag">
        <%= cl_image_tag @course.photo.key, class: "course-photo"%>
        <div class="course-price">
          <h2>Â¥ <%=@course.price%></h2>
        </div>
        <%= button_to "I want to buy this course!!", bookings_path(course_id: @course.id), class: "btn price-btn" %>
    </div>
  </div>
  <div class="course-show-detail">
    <div class="course-show-detail-syllabus-title">
    <h2>What You Can Learn From This Course:</h2>
    </div>
    <div class="course-show-syllabus">
      <%=simple_format(@course.syllabus)%>
    </div>
  </div>
</div>
