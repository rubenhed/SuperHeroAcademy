<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4 col-sm-6">
        <div class="card mb-4 shadow-sm p-3">
          <div class="d-flex justify-content-center">
            <% unless course.photo.key.nil? %>
              <%= image_tag course.photo , height: 150, width: 150, crop: :fill%>
            <% else %>
              <div class="d-flex align-items-center" style="height: 200px; width: auto">
                <h3>No Image here ðŸ˜‘</h3>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"> <%= course.title %> </h5>
            <p class="card-text"> <%= course.description %> </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'View', course_path(course), class: 'btn btn-sm btn-outline-secondary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
