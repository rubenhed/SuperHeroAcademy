<div class="row justify-content-center">
  <div class="col-6 mt-5 bg-light">
    <h1 class="my-4">Create a new course</h1>
    <%= simple_form_for @course do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :syllabus %>
      <%= f.input :location %>
      <div class='d-flex flex-row justify-content-between'>
        <%= f.input :duration %>
        <%= f.input :online %>
      </div>
      <div class='d-flex flex-row justify-content-between'>
        <%= f.input :price %>
        <%= f.input :level, collection: Course.levels %>
        <%= f.input :category, collection: Course.categories %>
      </div>
      <div class='d-flex flex-row justify-content-between'>
        <%= f.input :start_time, html5: true %>
        <%= f.input :photo, as: :file %>
      </div>
      <%= f.submit "Make this course", class: "btn btn-primary" %>
      <%= link_to "Back to courses", courses_path, class: "btn btn-secondary my-3" %>
    <% end %>
  </div>
</div>
